[flake8]
# Configuration de Flake8 pour Bug Predictor

# Longueur maximale de ligne
max-line-length = 100

# Complexité cyclomatique maximale
max-complexity = 15

# Dossiers à exclure
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    .tox

# Erreurs à ignorer (ajustez selon vos besoins)
ignore =
    E203,  # Whitespace before ':'
    E266,  # Too many leading '#' for block comment
    E501,  # Line too long (géré par black)
    W503,  # Line break before binary operator
    W504,  # Line break after binary operator

# Afficher les erreurs avec numéro de ligne
show-source = True
statistics = True

# Formattage de sortie
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# Fichiers à vérifier
filename = *.py

# Avertissements comme erreurs
# strictness = medium